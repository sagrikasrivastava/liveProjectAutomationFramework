<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Data Driven Basics">
   <listeners>
       <listener class-name="org.uncommons.reportng.HTMLReporter"></listener>
       <listener class-name="org.uncommons.reportng.JUnitXMLReporter"></listener>
       <listener class-name="org.sagsri.listeners.CustomListeners"></listener>
   </listeners>
    <test verbose="2"
          preserve-order="true"
          name="Bank Manager Login Test">
        <classes>
            <class name="org.sagsri.testcases.BankManagerLoginTest">
                <methods>
                    <include name="loginAsBankManager"/>
                </methods>
            </class>
        </classes>
    </test>

    <test verbose="2"
          preserve-order="true"
          name="Add Customer Test">
        <classes>
            <class name="org.sagsri.testcases.AddCustomerTest">
                <methods>
                    <include name="addCustomer"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>